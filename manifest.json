{
  "manifest_version": 3,
  "name": "MCQ Gemini Helper",
  "description": "Extracts multiple-choice questions from a page, queries Gemini for the correct option, and shows a short transient result.",
  "version": "0.1.0",
  "permissions": [
    "storage",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://generativelanguage.googleapis.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Find MCQ Answer"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
